<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="400.0" style="-fx-background-color: #82AA68;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="screens.AddTaskScreen">
   <children>
      <AnchorPane layoutX="1.0" layoutY="82.0" prefHeight="290.0" prefWidth="400.0" style="-fx-background-color: white;">
         <children>
            <Label layoutX="16.0" layoutY="145.0" prefHeight="28.0" prefWidth="87.0" text="CATEGORY">
               <font>
                  <Font name="Gill Sans MT Condensed" size="23.0" />
               </font>
            </Label>
            <Label layoutX="14.0" layoutY="79.0" prefHeight="28.0" prefWidth="87.0" text="DATE">
               <font>
                  <Font name="Gill Sans MT Condensed" size="23.0" />
               </font>
            </Label>
            <Label layoutX="14.0" layoutY="14.0" prefHeight="28.0" prefWidth="87.0" text="DESCRIPTION">
               <font>
                  <Font name="Gill Sans MT Condensed" size="23.0" />
               </font>
            </Label>
            <DatePicker fx:id="taskDate" layoutX="15.0" layoutY="107.0" prefHeight="26.0" prefWidth="186.0" promptText="Date" />
            <TextField fx:id="taskDescription" layoutX="15.0" layoutY="42.0" prefHeight="26.0" prefWidth="186.0" promptText="Description" />
            <TextField fx:id="taskCategory" layoutX="15.0" layoutY="173.0" prefHeight="26.0" prefWidth="186.0" promptText="Category" />
            <Label fx:id="errorMessage" layoutX="14.0" layoutY="220.0" prefHeight="17.0" prefWidth="372.0" textFill="RED">
